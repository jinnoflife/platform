<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Shopware\Core\System\Check\File">
            <argument>%kernel.project_dir%</argument>
        </service>
        
        <service id="Shopware\Core\System\Check\Command\FileCheckCommand">
            <argument type="service" id="Shopware\Core\System\Check\File"/>

            <tag name="console.command"/>
        </service>

        <service id="Shopware\Core\System\Check\Command\GenerateFileHashesCommand">
            <argument>%kernel.project_dir%</argument>
            
            <tag name="console.command"/>
        </service>
    </services>
</container>
